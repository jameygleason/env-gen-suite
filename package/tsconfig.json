{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"importHelpers": true,
		"lib": ["es2019"],
		"module": "es2020",
		"moduleResolution": "node",
		"noEmit": true,
		"noImplicitThis": true,
		"resolveJsonModule": false,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"target": "es2019",
		"paths": {
			"@signalchain/utils/rimraf": ["node_modules/@signalchain/utils/dist/rimraf"]
		}
	},
	"exclude": ["node_modules", "dist", "data/generated"]
}
